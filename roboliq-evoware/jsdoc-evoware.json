{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": ["src"],
		"exclude": ["node_modules"],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false,
		"default": {
			"outputSourceFiles": true
		},
		"systemName"      : "Roboliq Evoware",
		"footer"          : "",
		"copyright"       : "Roboliq Copyright Â© 2016-2017 Ellis Whitehead",
		"navType"         : "vertical",
		"theme"           : "cerulean",
		"linenums"        : true,
		"collapseSymbols" : false,
		"inverseNav"      : true,
		"outputSourceFiles": true
	},
	"opts": {
		"destination": "../docs/roboliq-evoware",
		"template": "node_modules/ink-docstrap/template",
		"readme": "src/Readme.md"
	}
}
